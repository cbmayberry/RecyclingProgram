<p id="notice"><%= notice %></p>

<div class="container">
  <div class="table-wrapper">
    <div class="table-title">
      <div class="row">
        <div class="col-sm-8"><h2>Resources</h2></div>
        <div class="col-sm-4">
          <%= link_to 'New Resource', new_resource_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Location</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @resources.each do |resource| %>
          <tr>
            <td><%= resource.title %></td>
            <td><%= resource.location %></td>
            <td><%= resource.description %></td>
            <td>
              <%= link_to 'Edit', edit_resource_path(resource), class: "btn btn-warning" %>
              <%= button_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>